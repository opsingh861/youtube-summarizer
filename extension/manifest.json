{
    "manifest_version": 3,
    "name": "Youtube Summarizer",
    "description": "Summarizes Youtube videos",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "host_permissions": [
        "https://127.0.0.1/:5000*"
    ],
    "action": {
        "default_title": "Summarizes Youtube videos",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}